@model OrderItem.ViewModel.AccountViewModel

@{
    ViewBag.Title = "Login";
}

<h2 class="text-capitalize text-center" style="font-family:'Century Gothic'; font-weight:800; padding-top: 12px; margin-bottom: 25px">
    <span>K</span>im's <span>F</span>ood <span>O</span>nline <span>O</span>rder (<span>F</span>orm)
</h2>
<h2 class="text-capitalize text-center" style="font-family:'Century Gothic'; font-weight:800; padding-top: 12px; margin-bottom: 25px">
     (<span>S</span>ign <span>I</span>n)
</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="font-family:'Century Gothic'; background-color: #ecb731; border-radius: 25px; border: 1px solid black;">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*<div class="col-md-0">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            </div>*@
            @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*<div class="col-md-0">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            </div>*@
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-3">
            @Html.ActionLink("Click to Register", "SignUp")
        </div>
        <div class="col-md-offset-0 col-md-3">
            <input type="submit" value="Sign In" class="btn btn-primary" />
        </div>
    </div>

    <div>
      
    </div>
</div>
}

